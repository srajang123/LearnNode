<main>
    <div class="grid">
        {{#each rows}}
            <div class="flash">
                <div class="name">{{this.name}}</div>
                <div class="image">
                    {{#if this.male}}
                        <img src="../images/Male.jpg" id="img">
                    {{else}}    
                        <img src="../images/Female.jpg" id="img">
                    {{/if}}
                </div>
                <div class="details">
                    <div class="age"><b id="head">Age:</b>{{this.age}}</div>
                    <div class="mail"><b id="head">E-Mail:</b>{{this.mail}}</div>
                </div>
                <div class="edit">
                    <form action="/del-student" method="post">
                        <input type="text" value="{{{this.id}}}" name="id" hidden>
                        <input type="hidden" value="{{{../csrfToken}}}" name="_csrf">
                        <input type="submit" value="Delete" id="" class="button">
                    </form>
                </div>
            </div>
        {{/each}}
    </div>
</main>